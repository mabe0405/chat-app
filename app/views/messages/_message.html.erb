 <div class="chat">
	 <span class="chat-name"><%=message.user.name%></span>
	 <span class="chat-date"><%=l message.created_at%></span>
	 <div class="chat-message"><%=message.content%></div>
	 <div>
	 <%= image_tag message.image.variant(resize:'500x500') ,class:"message-image" if message.image.attached?%>
	 </div>
 </div>
