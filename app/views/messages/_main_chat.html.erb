<header>
 <div class="header-logo">
  <%= @room.name%>
 </div>
 <div class="header-exit">
  <a href="#">チャットを終了する</a>
</header>
<div class="midlle-main-chat">
<%= render partial: "message" ,collection: @messages %>
</div>
<footer>
<%= form_with model:[@room,@message],local: true do |f|%>
<div class="form">
 <div class="message">
	 <%= f.text_field :content,class:"message-form" ,placeholder: "type a message"%>
	 <label class="form-image">
	  <span class="image">画像</span>
		<%= f.file_field :image,class:"hidden"%>
	 </label>
 </div> 
 <%=f.submit "送信" ,class:"btn" %>
</div>
<%end%>
</footer>